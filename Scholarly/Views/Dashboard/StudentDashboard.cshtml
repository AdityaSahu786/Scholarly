@model Scholarly.Models.StudentDashboardViewModel

@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Dashboard</h2>

<div>
    <h3>Profile</h3>
    <p><strong>Username:</strong> @Model.Username</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Year:</strong> @Model.Year</p>
</div>

<div>
    <h3>Enrolled Courses</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Grade</th>
                <th>Attendance</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model.Enrollments)
            {
                <tr>
                    <td>@enrollment.Courses.Name</td>
                    <td>@enrollment.Grade</td>
                    <td>
                        @foreach (var attendance in enrollment.Attendance)
                        {
                            <p>@attendance.Date.ToShortDateString() - @attendance.AttendanceData</p>
                        }
                    </td>
                    <td>
                        <form asp-action="AddAttendance" method="post">
                            <input type="hidden" name="enrollmentId" value="@enrollment.Id" />
                            <input type="hidden" name="studentId" value="@Model.StudentId" />
                            <input type="checkbox" name="isPresent" /> Present
                            <button type="submit" class="btn btn-primary">Submit Attendance</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
